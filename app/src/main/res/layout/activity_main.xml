<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.datadissolve.MainActivity"
    android:background="#ADD8E6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Logo-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/icon1_foreground"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/pinEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_shape"
            android:hint="please enter the Pin"
            android:textSize="24dp"
            android:inputType="numberPassword"
            android:singleLine="true" />


        <!--linear layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--linear layout-->

            <LinearLayout
                android:id="@+id/Layout123"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button10"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="24dp"
                    android:onClick="onNumericButtonClick"
                    android:text="1"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button2"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="onNumericButtonClick"
                    android:text="2"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button6"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="24dp"
                    android:onClick="onNumericButtonClick"
                    android:text="3"
                    tools:ignore="HardcodedText" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/Layout456"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button9"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="onNumericButtonClick"
                    android:text="4"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button4"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="onNumericButtonClick"
                    android:text="5"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button5"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="onNumericButtonClick"
                    android:text="6"

                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutButton789"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button8"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="74dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="onNumericButtonClick"
                    android:text="7"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button3"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="onNumericButtonClick"
                    android:text="8"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/button7"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:onClick="onNumericButtonClick"
                    android:text="9"
                    tools:ignore="HardcodedText"
                    tools:layout_editor_absoluteX="258dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/LayoutButton"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/button">

                <!--LoginButton-->
                <Button
                    android:id="@+id/loginButton"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="@string/login_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:onClick="onNumericButtonClick"
                    android:text="0"
                    tools:ignore="HardcodedText"
                    tools:layout_editor_absoluteX="161dp" />

                <!--RegisterButton-->
                <Button
                    android:id="@+id/clear_button"
                    style="@style/NumericButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="@string/clear_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>